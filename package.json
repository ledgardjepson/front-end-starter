{
  "name": "fes",
  "description": "An HTML5, CSS, and Javascript starting point for front-end development.",
  "author": "Oliver Farrell & Jonny Haynes",
  "version": "4.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/powerhouse-industries/front-end-starter"
  },
  "engines": {
    "node": ">=0.12.0",
    "npm": ">=2.7.6"
  },
  "dependencies": {
    "autoprefixer": "^5.1.1",
    "bower": "^1.4.1",
    "bower-installer": "^1.2.0",
    "clean-css": "^3.2.10",
    "csscomb": "^3.0.4",
    "cssnano": "^1.1.0",
    "html-minifier": "^0.7.2",
    "htmlhint": "^0.9.7",
    "http-server": "^0.8.0",
    "imageoptim-cli": "^1.11.6",
    "jshint": "^2.7.0",
    "jsinspect": "^0.5.0",
    "minifier": "^0.6.2",
    "node-sass": "^3.1.1",
    "nodemon": "^1.3.7",
    "parallelshell": "^1.1.1",
    "parker": "^0.1.0",
    "phantomas": "^1.10.2",
    "replace": "^0.3.0",
    "svgo": "^0.5.1",
    "uglify-js": "^2.4.21"
  },
  "scripts": {
    "setup": "sh tasks/setup.sh",
    "server": "cd build && http-server",
    "js": "sh tasks/javascripts.sh",
    "sass": "sh tasks/sass.sh",
    "images": "sh tasks/images.sh",
    "html": "sh tasks/html.sh",
    "watch:images": "nodemon --watch source/images -x \"sh tasks/images.sh\"",
    "watch:sass": "nodemon -e scss --watch source/ -i node_modules/ -x \"sh tasks/sass.sh\"",
    "watch:js": "nodemon --watch source/javascripts -i build/ -i node_modules/ -e js -x \"sh tasks/javascripts.sh\"",
    "watch:html": "nodemon -i build/ -i node_modules/ -e html -x \"sh tasks/html.sh\"",
    "build": "npm run sass && npm run js && npm run html && npm run images",
    "build:watch": "parallelshell 'npm run watch:js' 'npm run watch:sass' 'npm run watch:html' 'npm run watch:images'",
    "deploy": "sh tasks/deploy.sh",
    "analyse": "sh tasks/analyse.sh"
  }
}
