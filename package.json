{
  "name": "fes",
  "description": "An HTML5, CSS, and Javascript starting point for front-end development.",
  "author": "Oliver Farrell & Jonny Haynes",
  "version": "4.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": ""
  },
  "frontend": {
    "name": "FES",
    "stylesheets": "source/scss",
    "javascripts": "source/javascripts"
  },
  "engines": {
    "node": ">=0.10.0",
    "npm": ">=2.1.5"
  },
  "dependencies": {
    "autoprefixer": "^5.1.0",
    "bower": "^1.3.12",
    "jshint": "^2.6.0",
    "imagemin": "^3.1.0",
    "node-sass": "^2.0.1",
    "parallelshell": "^1.1.1",
    "uglify-js": "^2.4.16",
    "watch": "^0.14.0",
    "bower-installer": "^1.1.0",
    "nodemon": "^1.3.7",
    "parker": "^0.0.8",
    "http-server": "^0.7.5"
  },
  "scripts": {
    "setup": "sh tasks/setup.sh",
    "server": "cd build && http-server",
    "js": "sh tasks/javascripts.sh",
    "sass": "sh tasks/sass.sh",
    "images": "sh tasks/images.sh",
    "html": "sh tasks/html.sh",
    "watch:sass": "nodemon -e scss --watch source/ -i node_modules/ -x \"sh tasks/sass.sh\"",
    "watch:js": "nodemon --watch source/ -i build/ -i node_modules/ -e js -x \"sh tasks/javascripts.sh\"",
    "watch:html": "nodemon -i build/ -i node_modules/ -e html -x \"sh tasks/html.sh\"",
    "build": "npm run build:sass && npm run build:js",
    "build:watch": "parallelshell 'npm run watch:js' 'npm run watch:sass' 'npm run watch:html'",
    "deploy": "sh tasks/deploy.sh"
  }
}
